cat <<EOL > .gitignore
# Terraform directories
.terraform/
.terraform.lock.hcl

# Terraform state files
*.tfstate
*.tfstate.*
*.backup

# Crash logs
crash.log

# Override files
override.tf
override.tf.json
*_override.tf
*_override.tf.json

# CLI configuration files
.terraformrc
terraform.rc

# Local variable files
*.tfvars
*.tfvars.json

# IDE/editor files
.vscode/
.idea/
*.swp
EOL

